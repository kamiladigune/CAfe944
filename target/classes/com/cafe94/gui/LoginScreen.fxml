<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe94.gui.LoginController">
   <padding>
      <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
   </padding>
   <children>
      <Label text="Staff Login">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label text="Email:" VBox.vgrow="NEVER" alignment="CENTER_LEFT" maxWidth="Infinity" />
      <TextField fx:id="emailField" promptText="Enter your email" />
      <Label text="Password:" alignment="CENTER_LEFT" maxWidth="Infinity" />
      <PasswordField fx:id="passwordField" promptText="Enter your password" />
      <Label fx:id="errorLabel" managed="false" textFill="RED" wrapText="true" VBox.vgrow="NEVER" />
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonAction" text="Login" defaultButton="true" maxWidth="Infinity"/>
   </children>
</VBox>