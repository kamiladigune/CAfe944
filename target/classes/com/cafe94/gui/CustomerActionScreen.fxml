<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="350.0" prefHeight="250.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe94.gui.CustomerActionScreen">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <children>
      <Label text="Welcome!">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label text="What would you like to do?">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="bookingButton" mnemonicParsing="false" onAction="#handleBooking" prefWidth="180.0" text="Make a Booking" />
      <Button fx:id="takeawayButton" mnemonicParsing="false" onAction="#handleTakeaway" prefWidth="180.0" text="Place Takeaway Order" />
   </children>
</VBox>