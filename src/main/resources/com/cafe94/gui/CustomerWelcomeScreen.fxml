<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="300.0" prefHeight="250.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe94.gui.CustomerWelcomeScreen">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <children>
      <Label text="Customer Portal">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label text="Welcome! Please choose an option:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#handleSignUp" prefWidth="150.0" text="Sign Up" />
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="150.0" text="Login" />
   </children>
</VBox>